{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Enrichers.Environment" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/worker-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "HybridLedger": {
    "ActiveDirectory": {
      "LdapServer": "dc1.contoso.com",
      "Port": 636,
      "UseSsl": true,
      "BaseDn": "DC=contoso,DC=com",
      "ActivityWindowDays": 30,
      "Filter": "(&(objectCategory=computer)(objectClass=computer))",
      "AdditionalAttributes": [ "msDS-DeviceId" ]
    },
    "Graph": {
      "TenantId": "00000000-0000-0000-0000-000000000000",
      "ClientId": "<worker-app-client-id>",
      "ClientSecret": "<worker-app-client-secret - replace for local dev only>",
      "Scopes": [ "https://graph.microsoft.com/.default" ]
    },
    "Snapshot": {
      "RootPath": "data",
      "LatestFileName": "latest-snapshot.json",
      "HistorySize": 30
    },
    "Scheduler": {
      "Interval": "01:00:00",
      "StartupDelay": "00:00:10"
    },
    "Cleanup": {
      "Enabled": false,
      "DeleteEntra": false,
      "DeleteIntune": false,
      "DryRun": true,
      "IntuneFreshWindowDays": 30
    },
    "Sccm": {
      "Enabled": false,
      "AdminServiceBaseUrl": "https://cmserver.contoso.com/CCM_Proxy_ServerAuth/",
      "InactiveDaysThreshold": 90,
      "ObsoleteDaysThreshold": 7,
      "DomainUsername": null,
      "DomainPassword": null,
      "Domain": null
    }
  }
}
